{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "DRC Log Schema",
  "description": "Schema for DRC error categorization outputs",
  "properties": {
    "summary": {
      "type": "object",
      "properties": {
        "total_errors": {"type": "number"},
        "total_warnings": {"type": "number"},
        "error_categories": {
          "type": "object",
          "additionalProperties": {"type": "number"}
        }
      },
      "required": ["total_errors", "total_warnings"]
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "category": {"type": "string"},
          "severity": {"type": "string", "enum": ["error", "warning", "info"]},
          "location": {
            "type": "object",
            "properties": {
              "layer": {"type": "string"},
              "x": {"type": "number"},
              "y": {"type": "number"}
            }
          },
          "message": {"type": "string"},
          "rule": {"type": "string"}
        },
        "required": ["id", "category", "severity", "message"]
      }
    },
    "recommendations": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["summary", "errors"]
}


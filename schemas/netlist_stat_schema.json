{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Netlist Statistics Schema",
  "description": "Schema for netlist analysis outputs",
  "properties": {
    "design": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "module_count": {"type": "number"},
        "instance_count": {"type": "number"},
        "net_count": {"type": "number"}
      },
      "required": ["name"]
    },
    "gates": {
      "type": "object",
      "properties": {
        "total_count": {"type": "number"},
        "by_type": {
          "type": "object",
          "additionalProperties": {"type": "number"}
        }
      },
      "required": ["total_count"]
    },
    "area": {
      "type": "object",
      "properties": {
        "total_um2": {"type": "number"},
        "by_module": {
          "type": "object",
          "additionalProperties": {"type": "number"}
        }
      }
    },
    "hierarchy": {
      "type": "object",
      "properties": {
        "depth": {"type": "number"},
        "max_instances_per_module": {"type": "number"}
      }
    },
    "recommendations": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["design", "gates"]
}


{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hierarchy_matching_schema.json",
  "title": "Hierarchy Matching API Input Schema",
  "description": "Schema for hierarchy matching API requests to map target netlist paths to golden netlists",
  "type": "object",
  "required": [
    "version",
    "target_netlist",
    "golden_netlist_dict"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "description": "API version number",
      "minimum": 1,
      "default": 1
    },
    "target_netlist": {
      "type": "string",
      "description": "Path to the target netlist file (.scs format)",
      "pattern": ".*\\.scs$"
    },
    "target_bench_path": {
      "type": "string",
      "description": "Path to the target testbench directory (e.g., maestro bench)"
    },
    "target_bench_type": {
      "type": "string",
      "description": "Type of target testbench",
      "enum": ["maestro", "ade_xl", "custom"],
      "default": "maestro"
    },
    "golden_netlist_dict": {
      "type": "object",
      "description": "Dictionary mapping golden identifiers to netlist file paths",
      "additionalProperties": {
        "type": "string",
        "description": "Path to golden netlist file (.scs format)"
      },
      "minProperties": 1
    },
    "golden_bench_path": {
      "type": "string",
      "description": "Path to the golden testbench directory"
    },
    "golden_bench_type": {
      "type": "string",
      "description": "Type of golden testbench",
      "enum": ["maestro", "ade_xl", "custom"],
      "default": "maestro"
    },
    "instance_paths": {
      "type": "array",
      "description": "List of hierarchical instance paths to resolve from target to golden",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "options": {
      "type": "object",
      "description": "Additional processing options",
      "properties": {
        "model": {
          "type": "string",
          "description": "LLM model to use for matching",
          "default": "llama3.3-70b-instruct"
        },
        "verbose": {
          "type": "boolean",
          "description": "Enable verbose output",
          "default": false
        },
        "dry_run": {
          "type": "boolean",
          "description": "Validate inputs without processing",
          "default": false
        }
      }
    }
  },
  "examples": [
    {
      "version": 1,
      "target_netlist": "/proj/mtk24231/made_scm_demo/.tmp123/input.scs",
      "target_bench_path": "/proj/mtk24231/made_scm_demo/scm_demo/scm_demo/maestro",
      "target_bench_type": "maestro",
      "golden_netlist_dict": {
        "scm_demo:scm_demo:1": "/proj/mtk24231/made_scm_demo/.tmp123/input1.scs"
      },
      "golden_bench_path": "/proj/mtk24231/made_scm_demo/scm_demo/scm_demo#2b2/maestro",
      "golden_bench_type": "maestro"
    }
  ]
}

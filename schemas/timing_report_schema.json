{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Timing Report Schema",
  "description": "Schema for timing analysis report outputs",
  "properties": {
    "summary": {
      "type": "object",
      "properties": {
        "setup_violations": {"type": "number"},
        "hold_violations": {"type": "number"},
        "max_delay": {"type": "number"},
        "min_delay": {"type": "number"},
        "critical_path": {"type": "string"}
      },
      "required": ["setup_violations", "hold_violations"]
    },
    "violations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"type": "string", "enum": ["setup", "hold"]},
          "path": {"type": "string"},
          "slack": {"type": "number"},
          "required_time": {"type": "number"},
          "actual_time": {"type": "number"}
        },
        "required": ["type", "path", "slack"]
      }
    },
    "recommendations": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["summary"]
}


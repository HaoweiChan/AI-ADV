{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EDA Agent Base State",
  "type": "object",
  "properties": {
    "input_data": {
      "type": "object",
      "description": "Raw artifact details provided to the workflow",
      "properties": {
        "content": {"type": "string"},
        "filename": {"type": "string"}
      },
      "required": ["content"],
      "additionalProperties": true
    },
    "parsed_data": {
      "type": "object",
      "description": "Structured representation created by the parser",
      "additionalProperties": true
    },
    "analysis_results": {
      "type": "object",
      "description": "LLM or heuristic analysis output",
      "additionalProperties": true
    },
    "execution_results": {
      "type": "object",
      "description": "EDA tool execution metadata",
      "properties": {
        "tool": {"type": "string"},
        "status": {"type": "string"}
      },
      "additionalProperties": true
    },
    "validation_status": {
      "type": "object",
      "description": "Guardrails or schema validation summary",
      "additionalProperties": {"type": "string"}
    },
    "report": {"type": "string"},
    "errors": {
      "type": "array",
      "items": {"type": "string"}
    },
    "metadata": {
      "type": "object",
      "description": "Workflow bookkeeping data",
      "additionalProperties": true
    }
  },
  "required": ["input_data"],
  "additionalProperties": true
}



